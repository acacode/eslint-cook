{
  "compileOnSave": false,
  "include": ["src"],
  "compilerOptions": {
    "pretty": true,
    "outDir": "dist",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "typeRoots": ["./types"],
    "types": ["node"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "plugins": []
  }
}
